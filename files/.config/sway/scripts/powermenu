#!/usr/bin/env bash
echo -e "Lock \nPoweroff \nReboot \nSuspend 󰤄\nLogout " \
  | fuzzel --dmenu --prompt="⚡ Power:" \
  | {
      read opcion
      case "$opcion" in
        "Lock " ) hyprlock ;;
        "Poweroff ") systemctl poweroff ;;
        "Reboot ") systemctl reboot ;;
        "Suspend 󰤄") hyprlock & systemctl suspend ;;
        "Logout ") kill -9 -1 ;;
        *) exit ;;
      esac
    }

